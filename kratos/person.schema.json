{
  "$id": "https://schema.w6d.io/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "required": [
            "email"
          ],
          "type": "string",
          "format": "email",
          "title": "e-mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "name": {
          "type": "object",
          "required": [
            "first",
            "last"
          ],
          "properties": {
            "first": {
              "title": "First Name",
              "type": "string"
            },
            "last": {
              "title": "Last Name",
              "type": "string"
            }
          }
        },
        "roles": {
          "type": "object",
          "required": [
            "private_projects"
          ],
          "properties": {
            "organizations": {
              "title": "List of your organization rules",
              "type": "array",
              "item": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "integer"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            },
            "scopes": {
              "title": "List of your scope rules",
              "type": "array",
              "item": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "integer"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            },
            "private_projects": {
              "title": "List of your individual projects rules depending you are the owner of an project",
              "type": "array",
              "item": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "integer"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            },
            "affiliate_projects": {
              "title": "List of the projects rules to which you are affiliated according to your membership in an organization or a field of application",
              "type": "array",
              "item": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "integer"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            }

          }
        },
        "additionalProperties": false
      }
    }
  }
}

